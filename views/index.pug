extends layout

block content
    h1 #{title}

    form(id='form' method ='post' action='/login')
        p #{username}
            input(type='text' name='username' autocomplete='off' required='true')
        div(class='pass')
            p #{password} 
                input(id='password' type='password' name='password' autocomplete='off' required='true')
                input(type='checkbox' onClick='togglePassword()')
                b Show Password
                script(type='text/javascript').
                    function togglePassword() {
                        var elem = document.getElementById('password');
                        console.log(elem.type);
                        if (elem.type === 'password') {
                            elem.type = 'text';
                        } else {
                            elem.type = 'password';
                        }
                    }
        p
            input(id='btn' type='submit' value='Log In')

    a(href='create')
        div(class='create_account') #{noAccount}
